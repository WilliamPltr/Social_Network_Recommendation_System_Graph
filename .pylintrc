[MASTER]
ignore=__pycache__,.venv,env

[MESSAGES CONTROL]
# Keep the configuration simple and focused on major issues so that it is
# realistic to reach a high pylint score, while still encouraging clean code.
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    R0903,  # too-few-public-methods
    R0914,  # too-many-locals (acceptable in ETL scripts)
    R0915,  # too-many-statements (acceptable in ETL scripts)
    R0801,  # duplicate-code (acceptable for similar connection patterns)

[FORMAT]
max-line-length=100

[BASIC]
good-names=i,j,k,x,y,df


